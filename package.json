{
  "name": "tds-dito-vscode",
  "displayName": "TDS-Dito, your partner in AdvPL programming",
  "description": "Using artificial intelligence resources, TDS-Dito will assist you in AdvPL programming",
  "version": "0.0.1",
  "publisher": "TOTVS",
  "preview": true,
  "author": {
    "name": "TOTVS",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "Apache-2.0",
  "keywords": [
    "advpl",
    "tlpp",
    "tds",
    "totvs",
    "protheus",
    "artificial intelligence",
    "code",
    "assistant",
    "ai",
    "development"
  ],
  "engines": {
    "vscode": "^1.63.1"
  },
  "icon": "icons/tds-dito.png",
  "categories": [
    "Machine Learning",
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvs/tds-dito-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/tds-dito-vscode.git"
  },
  "galleryBanner": {
    "color": "#100f11",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/totvs/tds-dito-vscode?style=social",
      "description": "Star tds-dito-vscode on Github",
      "href": "https://github.com/totvs/tds-dito-vscode"
    },
    {
      "url": "https://img.shields.io/twitter/follow/totvs?style=social",
      "description": "Follow TOTVS on X",
      "href": "https://twitter.com/TOTVS"
    }
  ],
  "homepage": "https://github.com/totvs/tds-dito-vscode",
  "activationEvents": [
    "onLanguage:advpl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tds-dito.afterInsert",
        "title": "After Insert",
        "category": "TDS-Dito"
      },
      {
        "command": "tds-dito.login",
        "title": "Login",
        "category": "TDS-Dito"
      },
      {
        "command": "tds-dito.logout",
        "title": "Logout",
        "category": "TDS-Dito"
      },
      {
        "command": "tds-dito.attribution",
        "title": "Show Code Attribution",
        "category": "TDS-Dito"
      },
      {
        "command": "tds-dito.generateCode",
        "title": "Generate Code",
        "category": "TDS-Dito"
      }
    ],
    "configuration": [
      {
        "title": "TDS-Dito",
        "properties": {
          "tds-dito.version": {
            "type": "string",
            "value": "0.0.1",
            "description": "Schema Configuration Version"
          },
          "tds-dito.userLogin": {
            "type": "boolean",
            "default": false,
            "description": "User login status"
          },
          "tds-dito.documentFilter": {
            "type": [
              "object",
              "array"
            ],
            "default": [
              {
                "language": "advpl"
              },
              {
                "language": "advpl-asp"
              }
            ],
            "description": "Filter documents to enable suggestions for"
          }
        }
      }
    ],
    "keybindings": [
      {
        "key": "cmd+shift+l",
        "command": "editor.action.inlineSuggest.trigger"
      },
      {
        "key": "cmd+shift+a",
        "command": "tds-dito.attribution"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "xwatch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "--PUBLISH--": "",
    "vscode:prepublish": "npm run compile",
    "--TEST--": "",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@huggingface/agents": "^0.0.5",
    "@huggingface/hub": "^0.13.0",
    "@huggingface/inference": "^2.6.4",
    "@vscode/l10n": "^0.0.18",
    "@vscode/l10n-dev": "^0.0.31",
    "undici": "^6.4.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.11.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "extensionDependencies": [
    "TOTVS.tds-vscode"
  ]
}